@using QuickTie.Data.Models

<div class="item d-flex justify-content-between pb-3">
    <div class="d-flex align-items-center">
        <div class="item-image-container me-2 bg-white position-relative border border-2">
            <img src="@OrderItem.Item.MainProductImage" class="w-100 h-100" alt="Product Image" />
        </div>
        <div class="position-relative">
            <div class="item-info">
                <p class="fw-normal mb-1">@OrderItem.Item.Name</p>
                <p class="fw-lighter mb-0 text-secondary">@OrderItem.Item.ProductType</p>
            </div>
        </div>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-end">
        <p class="mb-1">@OrderItem.Quantity items</p>
        <p class="mb-0 text-secondary">$@OrderItem.Item.UnitCost</p>
    </div>
</div>

@code {
    [Parameter]
    public OrderItem OrderItem { get; set; }
}
